<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!-- action on perizie.perizia -->
        <act_window
                id="perizia_action"
                name="Perizie"
                res_model="perizie.perizia"/>

        <!-- menuitem for perizie -->
        <menuitem
                id="perizia_menu"
                name="Perizia"
                action="perizia_action"
                parent=""
                sequence="5"/>

        <!-- form perizia_view_form on perizie.perizia -->
        <record id="library_book_view_form" model="ir.ui.view">
            <field name="name">Perizia Form</field>
            <field name="model">perizie.perizia</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Dati Perizia">
                        <label for="numero_procedimento" string="Procedimento"/>
                        <div class="row">
                            <div class="col-md-1">
                                <label for="numero_procedimento" string="numero"/>
                                <field name="numero_procedimento"/>
                            </div>
                            <div class="col-md-1">
                                <label for="numero_procedimento_anno" string="anno"/>
                                <field name="numero_procedimento_anno"/>
                            </div>
                            <div class="col-md-1">
                                <label for="numero_procedimento_mod" string="mod."/>
                                <field name="numero_procedimento_mod"/>
                            </div>
                            <div class="col-md-9">
                            </div>
                        </div>
                    </group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="short_name"/>
                        <field name="descrizione"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- tree perizia_view_tree on perizie.perizia -->
        <record id="perizia_view_tree" model="ir.ui.view">
            <field name="name">Perizia List</field>
            <field name="model">perizie.perizia</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="descrizione"/>
                </tree>
            </field>
        </record>

