<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!-- form reperto_view_form on perizie.reperto -->
        <record id="reperto_view_form" model="ir.ui.view">
            <field name="name">Reperto Form</field>
            <field name="model">perizie.reperto</field>
            <field name="arch" type="xml">
                <form string="Reperto">
                    <sheet>
                        <!--<field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium"}'/>-->
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                            <label for="categoria"/>
                            <field name="categoria"/>
                            <label for="modello" class="oe_edit_only" string="Modello"/>
                            <field name="modello"/>
                            <group>
                                <field name="serial_number"/>
                                <field name="dimensione"/>
                                <field name="descrizione_verbale"/>
                                <field name="immagine_ids"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tree reperto_view_tree on perizie.reperto -->
        <record id="reperto_view_tree" model="ir.ui.view">
            <field name="name">Reperto List</field>
            <field name="model">perizie.reperto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="descrizione_verbale"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
