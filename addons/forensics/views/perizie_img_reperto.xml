<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!-- form img_reperto_view_form on perizie.img.reperto -->
        <record id="img_reperto_view_form" model="ir.ui.view">
            <field name="name">Immagini Reperto Form</field>
            <field name="model">perizie.img.reperto</field>
            <field name="arch" type="xml">
                <form string="Immagini del Reperto">
                    <!--<field name="image" widget="image" class="oe_avatar"/>-->
                    <field name="image" widget="image" class="oe_left oe_image_custom"/>
                    <div class="oe_title">
                        <div>
                            <field name="name" class="oe_inline" placeholder="Breve Descrizione Foto"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <!-- tree form img_reperto_view_tree on perizie.img.reperto -->
        <record id="reperto_view_tree" model="ir.ui.view">
            <field name="name">Reperto List</field>
            <field name="model">perizie.img.reperto</field>
            <field name="arch" type="xml">
                <tree>
                    <!--<field name="image" widget="image" />-->
                    <field name="name"/>
                    <!--<field name="reperto_img_id"/>-->
                </tree>
            </field>
        </record>
    </data>
</openerp>